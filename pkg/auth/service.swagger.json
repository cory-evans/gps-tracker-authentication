            }
          }
        ],
        "tags": [
          "Devices"
        ],
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
    "/devices": {
      "get": {
        "summary": "Get a list of all devices owned by the user",
        "operationId": "AuthService_GetOwnedDevices",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authGetOwnedDevicesResponse"
            }
